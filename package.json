{
    "name": "@blog/monorepo",
    "version": "0.0.0",
    "private": true,
    "description": "blog scalable monorepo",
    "scripts": {
        "build:prod": "turbo run build:prod && node scripts/collect-dist.mjs",
        "build:changed": "turbo run build:prod --filter='...[origin/main]' && node scripts/collect-dist.mjs",
        "build:blog": "turbo run build:prod --filter @blog/blog-ssr",
        "build:index": "turbo run build:prod --filter @blog/SpringCatTech-blog",
        "build:uilib": "turbo run build:prod --filter @blog/ui-lib",
        "build:utils": "turbo run build:prod --filter @blog/utils",
        "preview:blog": "turbo run preview --filter @blog/blog-ssr",
        "preview:index": "turbo run preview --filter @blog/SpringCatTech-blog",
        "dev": "turbo run dev",
        "dev:index": "turbo run dev --filter @blog/SpringCatTech-blog",
        "dev:blog": "turbo run dev --filter @blog/blog-ssr",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install",
        "clean": "rm -rf node_modules **/*/node_modules",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "turbo run build:prod --filter=...[HEAD^1] && node scripts/collect-dist.mjs && changeset publish",
        "test": "turbo run test --filter=...[HEAD^1]",
        "test:changed": "turbo run test --filter='...[origin/main]'"
    },
    "lint-staged": {
        "apps/blog-index/**/*.{js,jsx,ts,tsx}": [
            "pnpm --filter @blog/SpringCatTech-blog test -- related"
        ],
        "apps/blog-ssr/**/*.{js,jsx,ts,tsx}": [
            "pnpm --filter @blog/blog-ssr test -- related"
        ]
    },
    "pnpm": {
        "overrides": {
            "@types/node": "^22.0.0"
        }
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@types/fs-extra": "^11.0.4",
        "fs-extra": "^11.3.3",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.0",
        "prettier": "^3.0.0",
        "turbo": "^1.10.0",
        "typescript": "~5.9.2",
        "vitest": "^4.0.17"
    },
    "engines": {
        "node": ">=16.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@9.1.0"
}