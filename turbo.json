{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "NODE_ENV",
        "VITE_API_URL",
        "VITE_PROXY_REMOTE_PREFIX",
        "VITE_PROXY_WREMOTE_PREFIX",
        "SENTRY_AUTH_TOKEN",
        "VITE_SENTRY_DSN",
        "ORG_SLUG",
        "PROJECT_SLUG",
        "MODE",
        "DEV",
        "PROD",
        "SSR",
        "SENTRY_RELEASE"
    ],
    "pipeline": {
        "test": {
            "dependsOn": ["^test"],
            "outputs": [],
            "inputs": ["src/**", "test/**", "tsconfig.json"],
            "cache": true
        },
        "build:prod": {
            "dependsOn": [
                "^build:prod"
                // "lint"
            ],
            "outputs": [
                "dist/**",
                "client/**",
                ".next/**",
                "build/**"
            ]
        },
        "preview": {
            "outputs": [
                "dist/**",
                "client/**",
                ".next/**",
                "build/**"
            ],
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "check-types": {
            // 类型检查通常需要上游包已经 Build 好了类型
            // "dependsOn": ["^build:prod"],
            "outputs": []
        },
        "lint": {
            "outputs": [],
            "cache": true
        },
        "storybook": {
            "cache": false,
            "persistent": true
        },
        "build-storybook": {
            "outputs": [
                "storybook-static/**"
            ],
            "dependsOn": [
                "^build:prod"
            ]
        }
    }
}