{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "NODE_ENV",
        "VITE_API_URL",
        "VITE_PROXY_REMOTE_PREFIX",
        "VITE_PROXY_WREMOTE_PREFIX",
        "SENTRY_AUTH_TOKEN",
        "VITE_SENTRY_DSN",
        "ORG_SLUG",
        "PROJECT_SLUG"
    ],
    "pipeline": {
        "test": {
            "outputs": [],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts"
            ]
        },
        "build:prod": {
            "dependsOn": [
                "^build:prod"
            ],
            "outputs": [
                "dist/**",
                "client/**",
                ".next/**",
                "build/**"
            ]
        },
        "preview": {
            "outputs": [
                "dist/**",
                "client/**",
                ".next/**",
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "check-types": {
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "storybook": {
            "cache": false,
            "persistent": true
        },
        "build-storybook": {
            "outputs": [
                "storybook-static/**"
            ],
            "dependsOn": [
                "^build"
            ]
        }
    }
}