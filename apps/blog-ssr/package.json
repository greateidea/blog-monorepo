{
  "name": "@blog/blog-ssr",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "node server",
    "dev:fe": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "previewOld": "cross-env NODE_ENV=production node server",
    "build:clientSSG": "vite build --outDir dist/client --manifest",
    "build:serverSSG": "vite build --ssr src/entry-server-ssg.tsx --outDir dist/server",
    "prerender": "node prerender.js",
    "build:allSSG": "npm run build:clientSSG && npm run build:serverSSG && npm run prerender",
    "build:prod": "npm run build:clientSSG && npm run build:serverSSG && npm run prerender",
    "preview": "cross-env NODE_ENV=production node server-ssg",
    "test": "vitest",
    "test:run": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@blog/ui-lib": "workspace:^",
    "@preact/signals": "^2.4.0",
    "@preact/signals-react": "^3.4.0",
    "@sentry/node": "^10.36.0",
    "@sentry/react": "^10.36.0",
    "@sentry/vite-plugin": "^4.7.0",
    "@tailwindcss/vite": "^4.1.17",
    "antd": "^5.27.4",
    "axios": "^1.12.2",
    "compression": "^1.8.1",
    "dompurify": "^3.2.7",
    "express": "^5.1.0",
    "gsap": "^3.13.0",
    "highlight.js": "^11.11.1",
    "prismjs": "^1.30.0",
    "quill-delta-to-html": "^0.12.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router": "7.9.3",
    "react-router-dom": "7.9.3",
    "sirv": "^3.0.2",
    "typed.js": "^2.1.0"
  },
  "devDependencies": {
    "@blog/test-config": "workspace:^",
    "@blog/tsconfig": "workspace:^",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.1",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.0.0",
    "postcss": "^8.5.6",
    "vite": "^7.1.5",
    "vitest": "^4.0.17"
  }
}